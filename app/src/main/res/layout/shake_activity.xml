<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_backgroud" >

    <FrameLayout
        android:id="@+id/fraHead"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/background_red">

        <TextView
            android:id="@+id/head_goback"
            style="@style/style_15_EBEBEB_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn"
            android:clickable="true"
            android:gravity="center"
            android:onClick="goBack"
            />

        <TextView
            style="@style/style_18_BEBEBE_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="摇一摇" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="100.0dip" >

        <FrameLayout
            android:id="@+id/shake_background_layout"
            android:layout_width="fill_parent"
            android:layout_height="210.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp" >

            <LinearLayout
                android:id="@+id/shake_background_layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="111.0dip"
                    android:layout_height="172.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:background="@drawable/shake_icon"
                    android:contentDescription="none"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/shake_background_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0.0dip"
                    android:background="@drawable/shake_shadow"
                    android:contentDescription="none" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/shake_bottom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shake_background_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:lineSpacingExtra="5.0dip"
            android:text="摇啊摇！"
            android:textColor="#ff3e2926"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/shake_bottom_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shake_bottom_title"
            android:layout_centerHorizontal="true"
            android:text="摇出热门，摇出特惠商品！"
            android:textColor="#ff3e2926"
            android:textSize="17sp" />

        <!--
        <LinearLayout
            android:layout_width="111.0dip"
            android:layout_height="172.0dip"
            android:layout_below="@+id/imgLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10.0dip"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textVersion"
                style="@style/style_14_666666_BOLD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                style="@style/style_14_666666_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25.0dip"
                android:text="摇啊摇！" />

            <TextView
                style="@style/style_14_666666_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摇出优惠劵，摇出特惠商品！" />
        </LinearLayout>
        -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shake_product"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fraHead"
        android:layout_centerHorizontal="true" >

        <include
            android:id="@+id/shake_loading"
            layout="@layout/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/shake_product_layout"
            android:layout_width="272.0dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/shake_loading"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shake_bottom"
        android:layout_width="210.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/shake_bottom_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shake_number_times_bg"
            android:gravity="center"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:textColor="#ff000000"
            android:textSize="16.0sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/shake_loading_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>