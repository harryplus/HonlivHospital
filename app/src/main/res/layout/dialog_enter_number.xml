<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffeeeeee" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="修改数量"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/edit_productNum_price_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="￥0.00"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <TextView
                 android:id="@+id/edit_productNum_Number_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="x 1"
                android:textColor="@color/red"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/edit_productNum_subNum_BT"
            style="@android:style/Widget.Button.Small"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_sub_number" />

        <EditText
           android:id="@+id/edit_productNum_ET"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:maxLength="3"
            android:focusable="true"
            android:inputType="number"
            android:text="1" >
        </EditText>
        <Button
            android:id="@+id/edit_productNum_addNum_BT"
            style="@android:style/Widget.Button.Small"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_add_number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/edit_productNum_ok_TV"
           android:layout_width="0dp"
           android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
             android:layout_marginRight="20dp"
            android:background="@drawable/button_long"
            android:clickable="true"
            android:gravity="center"
            android:onClick="ok"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
             android:id="@+id/editproductNum_cancle_TV"
            android:layout_width="0dp"
           android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/search_del"
            android:clickable="true"
            android:gravity="center"
            android:onClick="cancle"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="16sp" />
        
    </LinearLayout>
      
</LinearLayout>