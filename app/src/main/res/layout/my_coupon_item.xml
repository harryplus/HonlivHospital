<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_item_bg"
        android:orientation="vertical" 
        android:padding="3dp">
       <!--  <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#fff0f0f0" /> -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1.0dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:minWidth="70.0dip"
                android:text="优惠券:"
                android:textColor="@color/myitegralhead"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/coupon_code_TV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="6.0dip"
                android:gravity="center_vertical"
                android:text="438450679"
                android:singleLine="true"
                android:textColor="@color/official_text2"
                android:textSize="16.0sp" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1.0dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:minWidth="70.0dip"
                android:text="类别:"
                 android:textColor="@color/myitegralhead"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/coupon_class_TV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="6.0dip"
                android:gravity="center_vertical"
                android:text="限品类券"
                android:singleLine="true"
                android:textColor="@color/official_text2"
                android:textSize="16.0sp" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1.0dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:minWidth="70.0dip"
                android:text="面值:"
                 android:textColor="@color/myitegralhead"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/coupon_price_TV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="6.0dip"
                android:gravity="center_vertical"
                android:text="10元"
                android:singleLine="true"
                android:textColor="@color/myitegral"
                android:textSize="16.0sp" />
        </LinearLayout>
        
          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1.0dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:minWidth="70.0dip"
                android:text="条件:"
                 android:textColor="@color/myitegralhead"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/coupon_limitDesr_TV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="5dp"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@color/official_text2"
                android:textSize="16.0sp" />
        </LinearLayout>
         
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1.0dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:minWidth="70.0dip"
                android:text="所需消费金额:"
                 android:textColor="@color/myitegralhead"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/coupon_limitprice_TV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2.0dip"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text="100元"
                android:singleLine="true"
                android:textColor="@color/official_text2"
                android:textSize="16.0sp" />
        </LinearLayout>
        
          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1.0dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:minWidth="70.0dip"
                android:text="有效期:"
                android:textColor="@color/myitegralhead"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/coupon_endDate_TV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="6.0dip"
                android:gravity="center_vertical"
                android:text="2014-2-12 08:06:05"
                android:singleLine="true"
                android:textColor="@color/official_text2"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>