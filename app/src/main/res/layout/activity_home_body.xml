<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/centerText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/text_limit"
                android:textColor="@color/background_red"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/more_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/more"
                android:textColor="@color/background_red" />
        </RelativeLayout>

        <com.honliv.honlivmall.view.MSGallery
            android:id="@+id/limit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spacing="5dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/centerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/text_bargain"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/more_bargain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/more" />
        </RelativeLayout>

        <com.honliv.honlivmall.view.MSGallery
            android:id="@+id/bargain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spacing="5dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/centerText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/text_like"
            android:textSize="25sp" />
    </RelativeLayout>

    <com.honliv.honlivmall.view.MSGallery
        android:id="@+id/like"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spacing="5dip" />
</LinearLayout>
