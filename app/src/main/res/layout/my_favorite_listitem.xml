<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="82.0dip"
        android:layout_height="82.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="5.0dip" >

        <ImageView
            android:id="@+id/myfavorite_product_img"
            android:layout_width="100.0dip"
            android:layout_height="80.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
         android:layout_weight="1"
        android:paddingLeft="2.0dip"
        android:paddingRight="1.0dip" >

        <TextView
            android:id="@+id/myfavorite_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4.0dip"
            android:layout_marginLeft="10.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text="商品的标题"
            android:textSize="14.0sp" />

        

        <TextView
            android:id="@+id/myfavorite_deleteprice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myfavorite_title_text"
            android:layout_marginBottom="3.0dip"
            android:layout_marginLeft="10.0dip"
            android:text="原价:￥280.0"
            android:textColor="@color/black"
            android:textSize="12.0sp" />
        
        <TextView
            android:id="@+id/myfavorite_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myfavorite_title_text"
             android:layout_toRightOf="@id/myfavorite_deleteprice_text"
            android:layout_alignBaseline="@id/myfavorite_deleteprice_text"
            android:layout_marginBottom="3.0dip"
            android:layout_marginLeft="10.0dip"
            android:text="现价:￥20.9"
            android:textColor="@color/red"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/myfavorite_comment_text"
            android:layout_width="wrap_content"
            android:text="已由888人评价"
            android:layout_height="wrap_content"
            android:layout_below="@id/myfavorite_price_text"
            android:layout_marginBottom="3.0dip"
            android:layout_marginLeft="10.0dip"
               android:textColor="@color/black"
            />
    </RelativeLayout>
    
     <ImageView
         android:layout_marginRight="16dp"
          android:layout_gravity="right|center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/arrow_right"/>

</LinearLayout>