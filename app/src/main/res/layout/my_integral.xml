<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relTop"
        android:layout_width="match_parent"
		android:layout_height="50.0dip"
		android:background="@color/background_red">

        <TextView
            android:id="@+id/titleBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn"
            android:clickable="true"
            android:gravity="center"
            android:onClick="goBack" />

        <TextView
            android:id="@+id/title"
            style="@style/style_18_BEBEBE_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="积分" />

        <!--
             <TextView
            android:id="@+id/check_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/check_mark_btn"
            android:clickable="true"
            android:gravity="center"
            android:onClick="checkOK" />
        -->
        
        <TextView
            android:id="@+id/address_manager_add_text"
            style="@style/style_15_EBEBEB_BOLD"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
			android:layout_gravity="right"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="8.0dip"
			android:background="@drawable/red_but"
            android:clickable="true"
			android:gravity="center"
			android:text="兑换"
			android:visibility="gone" />
        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/myintegral_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relTop"
        android:orientation="horizontal"
        android:padding="10.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您当前的积分:"
            android:textSize="18dp" />

        <TextView
             android:id="@+id/integral_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="积分值"
            android:textColor="@color/myitegral"
            android:textSize="17dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/myintegral_ll"
        android:background="#fff0f0f0" />
    
     <com.honliv.honlivmall.view.PullToRefreshView
	        android:id="@+id/main_pull_refresh_view"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
		 android:layout_above="@id/bottomBar"
		 android:layout_below="@id/myintegral_ll"
	        android:orientation="vertical" >
	    <ListView
	        android:id="@+id/content_lv"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="3dp"
	        android:cacheColorHint="#00000000"
	        android:divider="@null"
	        android:dividerHeight="3dp"
	        android:fadingEdge="none"
	        android:listSelector="@android:color/transparent"
			android:scrollbars="none"
	        android:scrollingCache="false" >
	    </ListView>
    </com.honliv.honlivmall.view.PullToRefreshView>
    
    <TextView
        android:id="@+id/nullProductTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="暂 无 积 分 记 录"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone" />
</RelativeLayout>