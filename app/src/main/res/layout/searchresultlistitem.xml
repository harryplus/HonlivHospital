<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/id_item_bg"
    android:orientation="horizontal"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="100.0dip"
        android:layout_height="90.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="3.0dip"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="5.0dip">

        <ImageView
            android:id="@+id/searchresult_product_img"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingRight="1.0dip">

        <TextView
            android:id="@+id/searchresult_product_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4.0dip"
            android:layout_marginLeft="3.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="商品的标题"
            android:textColor="@color/black"
            android:textSize="14.0sp" />

        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchresult_product_title_text"
            android:layout_marginBottom="3.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/searchresult_product_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:layout_marginRight="5.0dip"
                android:text="现价:￥200.9"
                android:textColor="@color/red"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/searchresult_product_oldprice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:paddingLeft="2dp"
                android:text="原价:￥200"
                android:textColor="@color/font_gray"
                android:textSize="12.0sp" />
        </LinearLayout>


        <!--
             <TextView
            android:id="@+id/searchresult_product_deleteprice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchresult_product_title_text"
            android:layout_marginBottom="3.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_alignBaseline="@id/searchresult_product_price_text"
            android:layout_toRightOf="@id/searchresult_product_price_text"
            android:text="原价:￥280.0"
            android:textColor="@color/black"
            android:textSize="14.0sp" />
        -->

        <TextView
            android:id="@+id/searchresult_product_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceLayout"
            android:layout_marginBottom="3.0dip"
            android:layout_marginLeft="3.0dip"
            android:text="888人评价"
            android:textColor="@color/black" />
    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="3.0dip"
        android:background="@drawable/arrow_right" />


</LinearLayout>