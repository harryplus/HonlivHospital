<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
<!--     android:background="@anim/shape_rounded_selectable" -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:background="@color/white"
        android:gravity="center"
        android:padding="5dp"
        android:text="正在进行升级下载"
        android:textSize="18sp" />
     <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />
    <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="3dp"
         android:layout_marginRight="3dp"
        android:layout_height="wrap_content"
        
        >
        <ProgressBar
	        android:id="@+id/pb_updata"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:progressDrawable="@drawable/color_progressbar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
        <TextView 
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_update_stats"
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="下载进度"
        />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_cancleok"
            android:background="@drawable/product_detail_shop_noselected"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:text="取消升级" />

        <Button
            android:id="@+id/bt_hide"
            android:background="@drawable/product_detail_shop_noselected"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="隐藏窗口" />
    </LinearLayout>

</LinearLayout>